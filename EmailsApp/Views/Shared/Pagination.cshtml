@model EmailsApp.Models.PaginationViewModel

@{
    var previousPage = Model.CurrentPage - 1;
    var nextPage = Model.CurrentPage + 1;
}

<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(Model.ActionName, Model.ControllerName, new { Page = previousPage })">
                    Previous
                </a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action(Model.ActionName, Model.ControllerName, new { Page = i })">
                        @i
                    </a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(Model.ActionName, Model.ControllerName, new { Page = nextPage })">
                    Next
                </a>
            </li>
        </ul>
    </nav>
</div>