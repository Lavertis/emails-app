@model EmailsApp.DTOs.PersonWithEmailsDto

@{
    ViewBag.Title = "Person Details";
    Layout = "_Layout";
}


<div class="col-6 mx-auto">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <h2>Person</h2>

    <div id="display">
        <p>First Name: <span id="displayFirstName">@Model.FirstName</span></p>
        <p>Last Name: <span id="displayLastName">@Model.LastName</span></p>
        <div>
            <p>Description:</p>
            <div
                id="displayDescription"
                style="max-height: 200px; overflow-y: auto; overflow-wrap: break-word;">
                @Model.Description
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-end gap-1">
            <button id="editButton" class="btn btn-primary">
                <i class="fa-solid fa-pen-to-square"></i>
            </button>
            <button
                class="btn btn-danger"
                onclick="confirmPersonDeletion(
                    '@Url.Action("Delete", "Person", new { personId = Model.Id })',
                    '@Url.Action("Index", "Person")'
                )">
                <i class="fa fa-trash"></i>
            </button>
        </div>
    </div>

    <div id="edit" style="display: none;">
        @using (Html.BeginForm("Update", "Person", FormMethod.Post))
        {
            <input type="hidden" name="Id" value="@Model.Id"/>

            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required/>
            </div>

            <div class="form-group mt-3">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required/>
            </div>

            <div class="form-group flex-column mt-3">
                <label for="Description">Description</label>
                <textarea class="form-control" id="Description" name="Description" rows="3">@Model.Description</textarea>
            </div>

            <div class="mt-3 d-flex justify-content-end gap-1">
                <button type="submit" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-secondary" onclick="cancelEdit()">Cancel</button>
            </div>
        }
    </div>

    <script>
        async function confirmPersonDeletion(actionUrl, redirectUrl) {
            if (confirm('Are you sure you want to delete this person?')) {
                fetch(actionUrl, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => {
                        if (response.ok) {
                            location.href = redirectUrl;
                        } else {
                            alert('An error occurred while deleting the person.');
                        }
                    })
                    .catch(error => {
                        console.error('An error occurred while deleting the person.', error);
                        alert('An error occurred while deleting the person.');
                    });
            }
        }

    async function confirmEmailDeletion(actionUrl) {
        console.log(actionUrl);
        if (@Model.Emails.Count <= 1) {
            alert('Last email cannot be deleted.');
            return;
        }

        if (confirm('Are you sure you want to delete this email?')) {
            fetch(actionUrl, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('An error occurred while deleting the email.');
                    }
                })
                .catch(error => {
                    console.error('An error occurred while deleting the email.', error);
                    alert('An error occurred while deleting the email.');
                });
        }
    }

    document.getElementById('editButton').addEventListener('click', function() {
        document.getElementById('display').style.display = 'none';
        document.getElementById('edit').style.display = 'block';
    });

    function cancelEdit() {
        document.getElementById('display').style.display = 'block';
        document.getElementById('edit').style.display = 'none';
        document.querySelector('#edit form').reset();
    }
</script>

    <table class="table mt-3">
        <thead>
        <tr>
            <th>Email Address</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var email in Model.Emails)
        {
            <tr>
                <td>@email.EmailAddress</td>
                <td class="text-end">
                    <a
                        href="javascript:void(0);"
                        onclick="confirmEmailDeletion('@Url.Action("Delete", "Email", new { emailId = email.Id })')"
                        class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @using (Html.BeginForm("AddPersonEmail", "Email", FormMethod.Post))
    {
        <input type="hidden" name="personId" value="@Model.Id"/>
        <div class="input-group px-2">
            <input type="email" class="form-control" name="emailAddress" required>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
            </button>
        </div>
    }

</div>