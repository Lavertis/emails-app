@model EmailsApp.DTOs.PersonDetailsDto

<p>
    <span class="fw-bold">First Name:</span>
    <span id="displayFirstName">@Model.FirstName</span>
</p>
<p>
    <span class="fw-bold">Last Name:</span>
    <span id="displayLastName">@Model.LastName</span>
</p>
<div>
    <p class="fw-bold">Description:</p>
    <div
        id="displayDescription"
        style="max-height: 200px; overflow-y: auto; overflow-wrap: break-word;">
        @Model.Description
    </div>
</div>
<div class="mt-3 d-flex justify-content-end gap-1">
    <button id="editButton" class="btn btn-primary">
        <i class="fa-solid fa-pen-to-square"></i>
    </button>
    <button
        class="btn btn-danger"
        onclick="deletePerson({
                    actionUrl: '@Url.Action("Delete", "Person", new { personId = Model.Id })',
                    redirectUrl: '@Url.Action("Index", "Person")'
                })">
        <i class="fa fa-trash"></i>
    </button>
</div>