@using EmailsApp.DTOs
@model EmailsApp.Models.ListViewModel<PersonListItemDto>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@await Html.PartialAsync("Components/Index/AddPersonModal.cshtml")

<div class="d-flex justify-content-between align-items-center">
    <h2>People</h2>
    <button type="button" class="btn btn-primary d-block" data-bs-toggle="modal" data-bs-target="#addPersonModal">
        Add person
    </button>
</div>

@await Html.PartialAsync("Components/Index/PersonList", Model.Items)

@await Html.PartialAsync(
    "Pagination",
    new PaginationViewModel
    {
        CurrentPage = Model.Page,
        TotalPages = Model.PageCount,
        ActionName = "Index",
        ControllerName = "Person"
    }
)